<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            name="Sample Category"
            id="PluginHelloWorldCommand.commands.category">
      </category>
      <command
            name="Sample Command"
            categoryId="PluginHelloWorldCommand.commands.category"
            id="PluginHelloWorldCommand.commands.sampleCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="PluginHelloWorldCommand.commands.sampleCommand"
            class="pluginhelloworldcommand.handlers.SampleHandler">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="PluginHelloWorldCommand.commands.sampleCommand"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               label="Sample Menu"
               mnemonic="M"
               id="PluginHelloWorldCommand.menus.sampleMenu">
            <command
                  commandId="PluginHelloWorldCommand.commands.sampleCommand"
                  mnemonic="S"
                  id="PluginHelloWorldCommand.menus.sampleCommand">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="PluginHelloWorldCommand.toolbars.sampleToolbar">
            <command
                  commandId="PluginHelloWorldCommand.commands.sampleCommand"
                  icon="icons/sample.gif"
                  tooltip="Say hello world"
                  id="PluginHelloWorldCommand.toolbars.sampleCommand">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension id="javaqualitymarker" point="org.eclipse.core.resources.markers"/>
   <extension
         id="javaqualityissue"
         name="Java Quality Issue"
         point="org.eclipse.core.resources.markers">
      <super type="org.eclipse.core.resources.problemmarker"/>
      <super type="pluginhelloworld.javaqualitymarker"/>
      <persistent value="true"/>
   </extension>
   <extension
         point="org.eclipse.ui.editors.annotationTypes">
      <type
            markerType="pluginhelloworld.javaqualityissue"
            name="pluginhelloworld.javaqualityissue"
            super="org.eclipse.ui.workbench.texteditor.error"
            markerSeverity="2"/>
   </extension>

   <extension
         point="org.eclipse.ui.editors.markerAnnotationSpecification">
      <specification
            annotationType="pluginhelloworld.javaqualityissue"
            contributesToHeader="true"
            includeOnPreferencePage="false"
            isGoToNextNavigationTarget="true"
            isGoToPreviousNavigationTarget="true"
            label="Java Quality Issue Annotation Specification"
            showInNextPrevDropdownToolbarAction="true"
            symbolicIcon="error"/>
   </extension>
   

</plugin>
